extends ../layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/sForm/_sForm.pug

block variables
	- let  mainPage= null 
	- let  bg= null

block title
	- let  title= 'Модальные окна'
	title= title
block pagecontent
	//- +topLine()
	main
		.section.container
			h1 Страница для  демонстрации модальных окон
			.row
				mixin btn(id, name)
					.col-auto.mb-2
						button.btn.btn-primary(type='button' data-src=id data-fancybox).btn-modal-js= name
				//- +btn("#modal-call", "modal-call", 1)
				+btn("#modal-register", "Регистрация")
				+btn("#modal-review", "Отзыв")
				+btn("#modal-review-2", "Добавление отзыва")
				+btn("#modal-notifications", "Уведомления")
				+btn("#modal-my-reviews", "Мои отзывы")
				+btn("#modal-on-moderate", "На модерации")
				+btn("#modal-comments", "Комментарии")
				+btn("#modal-favorites", "Избранное")
				+btn("#modal-editing", "Редактирование ЛК")

	+parts('footer')